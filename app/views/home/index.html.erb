<div class="col-md-3">
	<% if current_user %>
		<div>
			<strong>Your Trips:</strong>
		</div>
		<br>
			<% @trips.each do |trip| %>
				<div><%= link_to trip.name, trip_path(trip.share_url) %></div>
			<% end %>

	<% else %>
		<div class="row">
		  <div class="col-sm-6">
				<%= form_for(@user) do |f| %>
		  		<% if @user.errors.any? %>
		    		<div id="error_explanation">
			      	<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

				      <ul>
					      <% @user.errors.full_messages.each do |msg| %>
			    	    	<li><%= msg %></li>
			     			<% end %>
			     		</ul>
				    </div>
				  <% end %>

				  <div class="signup">
				    <%= f.text_field :name, placeholder: "Name", class: "rounded", autofocus: "autofocus"%>
				  </div>
				  <div class="signup">
				    <%= f.text_field :email, placeholder: "Email", class: "rounded"  %>
				  </div>
				  <div class="signup">
				    <%= f.password_field :password, placeholder: "Password", class: "rounded"  %>
				  </div>
				  <div class="signup">
				    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "rounded"  %>
				  </div>
				  <div class="actions signup">
				    <%= f.submit "Create Account", class: "btn btn-large btn-primary btn-sm rounded" %>
				  </div>
				<% end %>
				<div class="signup">
					Already have an account? 
					<%= link_to "Sign in!", signin_path %>
				</div>
			</div>
		</div>
	<% end %>
</div>
<div class="col-md-8">
	<img src="assets/camping.jpg" class="camping-image">
</div>





