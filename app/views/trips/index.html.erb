<h1>Trip Index Page - Lists ALL of a user's trips</h1>

<table>
  <thead>
    <tr>
<!--       <th>Destination</th> -->
      <th>Arrival</th>
      <th>Departure</th>
<!--       <th>Share url</th> -->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
<!--         <td><%#= trip.destination%></td> -->
        <td><%= trip.arrival %></td>
        <td><%= trip.departure %></td>
        <td><%= trip.share_url %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

