<div class="row">
  <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="signup">
        <%= f.text_field :name, placeholder: "Name", class: "rounded"  %>
      </div>
      <div class="signup">
        <%= f.text_field :email, placeholder: "Email", class: "rounded"  %>
      </div>
      <div class="signup">
        <%= f.text_field :password, placeholder: "Password", class: "rounded"  %>
      </div>
      <div class="signup">
        <%= f.text_field :password_confirmation, placeholder: "Password Confirmation", class: "rounded"  %>
      </div>
      <div class="actions signup">
        <%= f.submit "Create Account", class: "btn btn-large btn-primary btn-sm rounded" %>
      </div>
    <% end %>

    <div class="signup">
      <%= link_to 'Back', root_path %>
    </div>
  </div>
</div>

    